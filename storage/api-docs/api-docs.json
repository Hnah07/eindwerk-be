{
    "openapi": "3.0.0",
    "info": {
        "title": "Concert API",
        "description": "API for managing concerts",
        "version": "1.0.0"
    },
    "paths": {
        "/api/concerts": {
            "get": {
                "tags": [
                    "Concerts"
                ],
                "summary": "Get all concerts",
                "operationId": "7fe55002e3b7e386dc418344a9942fbb",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Search concerts by name (partial match)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Metallica"
                    },
                    {
                        "name": "year",
                        "in": "query",
                        "description": "Filter concerts by year",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "2024"
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Filter concerts by type",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "concert",
                                "festival",
                                "dj set",
                                "club show",
                                "theater show"
                            ]
                        },
                        "example": "festival"
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort concerts by field (name, year) and direction (asc, desc). Example: year:desc",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "year:desc"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of concerts",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Summer Festival 2024"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "A fantastic summer music festival with multiple stages"
                                            },
                                            "year": {
                                                "type": "integer",
                                                "example": 2024
                                            },
                                            "type": {
                                                "type": "string",
                                                "example": "festival"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Concerts"
                ],
                "summary": "Create a new concert",
                "operationId": "a571791541f84db549de179830002615",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "description",
                                    "year",
                                    "type"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Name of the concert",
                                        "type": "string",
                                        "maxLength": 255,
                                        "minLength": 3,
                                        "example": "Summer Festival 2024"
                                    },
                                    "description": {
                                        "description": "Detailed description of the concert including venue, artists, and other important information",
                                        "type": "string",
                                        "minLength": 10,
                                        "example": "A fantastic summer music festival with multiple stages featuring top artists from around the world. The event will include food vendors, merchandise stands, and VIP areas."
                                    },
                                    "year": {
                                        "description": "Year of the concert",
                                        "type": "integer",
                                        "example": 2024
                                    },
                                    "type": {
                                        "description": "Type of the concert",
                                        "type": "string",
                                        "enum": [
                                            "concert",
                                            "festival",
                                            "dj set",
                                            "club show",
                                            "theater show"
                                        ],
                                        "example": "festival"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Concert created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Summer Festival 2024"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "A fantastic summer music festival with multiple stages"
                                        },
                                        "year": {
                                            "type": "integer",
                                            "example": 2024
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "festival"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-03-20T10:00:00Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-03-20T10:00:00Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The name field is required."
                                                    }
                                                },
                                                "description": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The description field is required."
                                                    }
                                                },
                                                "year": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The year field is required."
                                                    }
                                                },
                                                "type": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The type field is required."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/concerts/{id}": {
            "get": {
                "tags": [
                    "Concerts"
                ],
                "summary": "Get a specific concert",
                "operationId": "7a300c3da742086037781e7f07a39725",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Concert ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Concert details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "year": {
                                            "type": "integer"
                                        },
                                        "type": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Concert not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Concerts"
                ],
                "summary": "Update a concert",
                "operationId": "db80212e0a8f5b07e59773988e4fdd2d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Concert ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "year": {
                                        "type": "integer"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "concert",
                                            "festival",
                                            "dj set",
                                            "club show",
                                            "theater show"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Concert updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "year": {
                                            "type": "integer"
                                        },
                                        "type": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Concert not found"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Concerts"
                ],
                "summary": "Delete a concert",
                "operationId": "7d8b63d823379ebfa22ae8310590d030",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Concert ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Concert deleted successfully"
                    },
                    "404": {
                        "description": "Concert not found"
                    }
                }
            }
        },
        "/api/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get all users",
                "operationId": "c457726701591d1183b53aa71fc13441",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Search users by name (partial match)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "John"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Search users by email (partial match)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        },
                        "example": "john@example.com"
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort users by field (name, email, created_at) and direction (asc, desc). Example: name:asc",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "name:asc"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of users",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "John Doe"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "john@example.com"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/{id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get a specific user",
                "operationId": "36a33ff774d5cba33c039dec2c3e0287",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "john@example.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Concerts",
            "description": "Concerts"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}